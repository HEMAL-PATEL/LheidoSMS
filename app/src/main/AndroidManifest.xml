<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lheidosms.app" >

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lheido_sms_icon"
        android:label="@string/app_name"
        android:theme="@style/GreyTheme" >
        <activity
            android:name="com.lheidosms.app.MainLheidoSMS"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.lheidosms.app.notificationId" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LheidoSMSPreference"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/pref_app_name">
        </activity>

        <activity android:name=".LheidoSMSPreferenceOldApi"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/pref_app_name">
        </activity>

        <receiver android:name="com.lheidosms.app.SmsReceiver" android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
                <action android:name="com.lheidosms.app.sent" />
                <action android:name="com.lheidosms.app.delivered" />
                <action android:name="com.lheidosms.app.requestNotificationId" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
